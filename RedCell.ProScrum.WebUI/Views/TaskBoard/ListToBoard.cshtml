@{
    ViewBag.Title = "ToBoard";
}

@section scripts
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Views/TaskBoard/ListToBoard/loader.js")"></script>
}

<div class="page-header">
    <h2>Proyectos en progreso</h2>
</div>

<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Proyecto</th>
            <th>Cliente</th>
            <th>Fecha Registro</th>
            <th />
        </tr>
    </thead>
    <tbody data-bind='foreach: proyectos'>
        <tr>
            <td data-bind='text: Nombre'></td>
            <td data-bind='text: Cliente'></td>
            <td data-bind='text: FechaRegistro'></td>
            <td>
                <a href="#" class="btn btn-default btn-sm" data-bind="click: $root.board">
                    <span class="glyphicon glyphicon-cog"></span> Board
                </a>
            </td>
        </tr>
    </tbody>
</table>
